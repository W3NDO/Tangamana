<div class="w-full max-w-screen-sm mx-auto">
  <div class="py-12 text-center">
      <h2 class="text-2xl font-bold">Sign up</h2>
    </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field flex flex-col gap-2 mb-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", required: "true", placeholder: "someone@example.com", class: "text-black placeholder:text-gray-300" %>
    </div>

    <div class="field flex flex-col gap-2 mb-6">
      <div>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em class="text-xs opacity-75">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", required: "true", class: "text-black" %>
    </div>

    <div class="field flex flex-col gap-2 mb-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: "true", class: "text-black" %>
    </div>

    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="actions">
      <%= f.submit "Sign up", class: "block w-full px-8 py-4 bg-pink-600 text-white cursor-pointer transition-all hover:bg-pink-500 my-6" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
