<div id="<%= dom_id tavern %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= tavern.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Topic:</strong>
    <%= tavern.topic %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= tavern.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this tavern", tavern, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this tavern', edit_tavern_path(tavern), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
